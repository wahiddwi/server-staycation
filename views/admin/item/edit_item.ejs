<div class="tab-pane fade show active" id="add-item" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" value="<%= item.title %>" name="title" placeholder="Fill Your Title" required>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" value="<%= item.price %>" name="price" placeholder="Enter Price" required>
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" class="form-control" value="<%= item.city %>" name="city" placeholder="Enter City" required>
                </div>
                <div class="form-group">
                    <label for="category">Category</label>
                    <select class="form-control" name="categoryId">
                        <option value="<%= item.categoryId._id %>">--<%= item.categoryId.name %>--</option>
                        <% for(let i = 0; i < category.length; i++) { %>
                            <option value="<%= category[i].id %>"><%= category[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" class="form-control" name="image" multiple>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" name="about"><%= item.description %></textarea>
                  </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
      </div>
</div>